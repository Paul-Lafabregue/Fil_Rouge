<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        {% block title %}Welcome!
        {% endblock %}
    </title>

    {% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}

</head>

<body>

    {# ======== HEADER ======== #}

    <header class="fixed-top bg-light">

            <div class="p-0 container navbar justify-content-between align-items-center">
                <a class="link-dark navbar-brand fs-6">Contact</a>
                <div class="pb-0 pt-0 navbar navbar-expand-lg">
                    <ul class="navbar-nav me-auto fs-5 list-group-horizontal">

                        {% if app.user %}
                            <li class="nav-item dropdown fs-6">
                                <a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    <i class="bi bi-person-circle fs-5 text-dark"></i>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item disabled text-dark" href="#"><b>{{ app.user.username }}</b></a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('profil') }}">Mon profil</a>
                                    </li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li>
                                            <a class="dropdown-item" href="{{ path('admin_index') }}">Admistrator</a>
                                        </li>
                                    {% endif %}
                                    <li>
                                        <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnection</a>
                                    </li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item me-3 d-flex align-items-center">
                                <a class="nav-link link-dark" href="{{ path("app_login") }}"><i class="bi bi-person-square"></i> Connection</a>
                            </li>
                        {% endif %}

                        <li class="ms-3 me-3 d-flex align-items-center">
                            <a class="btn btn-outline-success" href="{{ path("cart_index") }}"><i class="bi bi-cart3"></i> Panier</a>
                        </li>

                    </ul>
                </div>
            </div>

        {# ======== NAVBAR ======== #}

        <div class="bgn shadow-lg pt-3 pb-3">
            <nav class="container navbar navbar-expand-lg navbar-dark">
                <img class="me-5" src="/images/logo.png" alt="logo" style="max-width: 150px; height: auto;">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="bi-view-list fs-3"></span>
                </button>
                <div class="collapse navbar-collapse ms-5" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto text-center fs-5">
                        <li class="nav-item me-3">
                            <a class="text-white nav-link" href="{{ path('home') }}">Accueil</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="text-white nav-link" href="{{ path('products_index') }}">Boutique</a>
                        </li>
                        <li class="nav-item me-3 dropdown">
                            <a class="text-white nav-link" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">Categories</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                            </ul>
                        </li>
                        <li class="nav-item me-3">
                            <a class="text-white nav-link" href="#">About us</a>
                        </li>
                    </ul>
                    <form class="nav-item">
                        <div class="input-group">
                            <input class="form-control shadow-none border-white" type="search"
                                placeholder="Rechercher un jeu" aria-label="Search">
                            <button class="btn btn-outline-light" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </nav>
        </div>

    </header>

    <div style="min-height: 164px;"></div>

    {% for message in app.flashes('success') %}
        <div class="container mt-2 alert alert-success">
            {{ message }}
        </div>
    {% endfor %}


    <div class="container">
        {% block body %}{% endblock %}
    </div>

    {# ======== FOOTER ======== #}

    <footer class="text-center text-lg-start bgn text-muted mt-5">

        <section class="container">

            <div class="row pt-4 pb-4">
                <div class="col-md-2 col-sm-12">
                    <h5>Section</h5>
                    <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Home</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Features</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Pricing</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">FAQs</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">About</a></li>
                    </ul>
                </div>

                <div class="col-md-2 col-sm-12">
                    <h5>Section</h5>
                    <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Home</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Features</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Pricing</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">FAQs</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">About</a></li>
                    </ul>
                </div>

                <div class="col-md-2 col-sm-12">
                    <h5>Section</h5>
                    <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Home</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Features</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">Pricing</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">FAQs</a></li>
                    <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-muted">About</a></li>
                    </ul>
                </div>

                <div class="col-md-4 col-sm-12 d-flex align-items-center">
                    <form>
                    <h5>Recevez nos offres spéciales</h5>
                    <p>Monthly digest of whats new and exciting from us.</p>
                    <div class="d-flex w-100 gap-2">
                        <label for="newsletter1" class="visually-hidden">Email address</label>
                        <input id="newsletter1" type="text" class="form-control" placeholder="Email address">
                        <button class="btn btn-outline-light" type="button">Subscribe</button>
                    </div>
                    </form>
                </div>
            </div>

        </section>
        
        <section class="container"> 

            <div class="row d-flex justify-content-between p-0 pb-2 pt-2 border-top">
                
                <p class="col-md-9 col-sm-12">
                    <img src="/images/logo.png" alt="logo" style="max-width: 150px; height: auto;"> 
                    © 2021 Company, Inc. All rights reserved.
                </p>
                <ul class="col-md-3 col-sm-12 list-unstyled d-flex align-items-center">
                    <li class="ms-3"><a class="link-dark" href="#"><i class="bi bi-facebook text-white"></i></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"> <i class="bi bi-twitter text-white"></i></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"><i class="bi bi-instagram text-white"></i></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"><i class="bi bi-linkedin text-white"></i></a></li>
                </ul>
            </div>

        </section>
     
    </footer>


    {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
    {% endblock %}

</body>

</html>