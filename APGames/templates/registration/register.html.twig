{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    
    <div class="row ms-1 me-1">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow my-5 bgn text-white" style="border-radius: 10px;">
          <div class="card-body p-4 p-sm-5">
            <h1 class="card-title text-center mb-5 fw-light fs-5">Inscription</h1>       
            {{ form_start(registrationForm) }}
              <div class="form-floating mb-3">
                {{ form_row(registrationForm.email) }}
              </div>
              <div class="form-floating mb-3">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
              </div>
              <div class="form-check mb-3">
                {{ form_row(registrationForm.agreeTerms) }}
              </div>
              <div class="d-grid">
                <button class="btn btn-warning btn-login text-uppercase fw-bold" type="submit">S'inscrire</button>
              </div>
            {{ form_end(registrationForm) }}
            <br>
            <hr>
            <div class="form-floating mb-3 text-center">
                <p>Déjà inscrit ?</p>
                <a href="{{ path('app_login') }}" class="d-grid btn btn-primary">Connecter !</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    

{% endblock %}
