	<div class="bgn mb-3 p-3 text-center text-white">
		<h3>Bienvenu dans notre Boutique</h3>
		{# <h4>Faites-vous plaisir !</h4> #}
	</div>

	<div class="container">

		<div class="row row-cols-3 row-cols-lg-4 g-4">

			{% for product in products %}

				<div class="col">
					<div class="card h-100 border-0 ">
						<div class="row g-0 shadow-lg bg-body rounded">
							<div class="col-md-12 text-center">
								<img src="/images/photos_jeux/{{ product.proPicture }}" style="max-height: 18em;" class="p-2 img-fluid rounded" alt="imgJeu">
							</div>
							<div class="col-md-12">
								<div class="p-0 card-body text-center ms-3 me-3">
									<p>{{ product.proName }}</p>
									<p class="text-success fs-5">{{ product.proPrice }}
										€</p>
								</div>
								<div class="card-footer row row-cols-3 ms-1 me-1 bgn">
									<div class="col text-center">
										<a class="text-warning" href="{{ path('products_show', {'id': product.id}) }}">
											<i class="bi bi-eye fs-3"></i>
										</a>
									</div>
									{% if app.user %}
										<div class="col text-center">
											<a class="text-white" href="{{ path('products_edit', {'id': product.id}) }}">
												<i class="bi bi-pen fs-3"></i>
											</a>
										</div>
									{% else %}
										<div class="col text-center"></div>
									{% endif %}
									<div class="col text-center">
										<a class="text-success" href="{{ path("cart_add", {'id': product.id}) }}">
											<i class="bi bi-bag-plus fs-3"></i>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% else %}
				Pas de jeu trouvé
			{% endfor %}

		</div>

		<a class="btn btn-success p-3" href="{{ path('products_new') }}">
			<i class="bi bi-plus-square"></i>
			Ajouter un produit</a>

	</div>

{% endblock %}
