<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

        <style>
    
            body {
                background-color: #DBDBDB; 
                background-image:url(/images/fond.jpg);
                background-repeat: no-repeat;
                background-attachment:fixed;
                height: 90%;
                /* background-position: center; */
                background-size: cover;
            }

        </style>

    </head>


    <body>

    <!-- NavBar -->
    <div class="bgn fixed-top">
        <nav class="container navbar navbar-expand-lg navbar-dark">
            <img class="ms-2 me-3 mb-0" src="/images/v3.png" alt="logo" style="max-width: 170px; height: auto;">
            {# <a class="ff nav-link nav-item me-3 text-light" href="{{ path('home') }}">A & P Games</a> #}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item me-3">
                        <a class="nav-link text-warning fs-5" href="{{ path('home') }}"><i class="bi bi-house"></i> Accueil</a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link text-warning fs-5" href="{{ path('products_index') }}"><i class="bi bi-shop-window"></i> Boutique</a>
                    </li>
                    <li class="nav-item me-3 dropdown">
                        <a class="nav-link text-warning fs-5" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-list"></i> Categories
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            {% for category in categories %}
                                    <li><a class="dropdown-item" href="#">{{ category.catName }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                    <form class="nav-item">
                    <div class="input-group">
                        <input class="form-control shadow-none border-warning" type="search" placeholder="Rechercher un jeu" aria-label="Search">
                        <button class="btn btn-outline-warning" type="submit"><i class="bi bi-search"></i></button> 
                    </div>
                    </form>
                    <li class="nav-item ms-3 me-2">
                        <a class="nav-link text-success fs-5" href="{{ path("cart_index") }}"><i class="outline bi bi-bag"></i> Panier</a>
                    </li>
                    {% if app.user %}
                     <li class="nav-item dropdown border border-warning rounded">
                        <a class="nav-link text-warning fs-5" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-bounding-box"></i> <b>{{ app.user.username }}</b>
                        </a>
                        <ul class="bg-warning dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Mon compte</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">DÃ©connection</a></li>
                        </ul>
                    </li>
                    {% else %}
                        <li class="nav-item">                
                            <a class="nav-link text-info fs-5" href="{{ path("app_login") }}"><i class="bi bi-person"></i> Connection</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        <div class="bg-warning p-1"></div>
    </div>
    <div class="p-4"></div>
    


    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

        <div class="container">
            {% block body %}{% endblock %}
        </div>



    {# ======== FOOTER ======== #}

    <footer class="bgn text-secondary mt-5">
        
        <div class="bg-warning p-1"></div>

        <div class="container p-5">

            <ul class="list-inline ms-3">
                <li>Mentions legals</li>
                <li>Contact</li>
                <li>Etc...</li>
            </ul>

            
            <p>&copy; 2021 Ailtonito & Paupaul Games</p>

        </div>

    </footer>



    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>       
    {% endblock %}    

    </body>
</html>