<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		{% endblock %}

		<style>

			body {
				background-color: #ffffffa1;
				/* background-image: url('/images/fond.jpg');
				background-repeat: no-repeat;
				background-attachment: fixed;
				height: 90%;
				background-size: cover; */
			}
		</style>

	</head>

	<body>

		<!-- NAVBAR -->
		<div class="bgn fixed-top" style="z-index: 4;">
			<nav class="container navbar navbar-expand-lg navbar-dark">
				<img class="me-3" src="/images/logo.png" alt="logo" style="max-width: 200px; height: auto;">
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="bi-view-list"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto">
						<li class="nav-item me-3">
							<a class="nav-link" href="{{ path('home') }}">
								<i class="bi bi-house fs-4"></i>
								Accueil</a>
						</li>
						<li class="nav-item me-3">
							<a class="nav-link" href="{{ path('products_index') }}">
								<i class="bi bi-shop-window fs-4"></i>
								Boutique</a>
						</li>
						<li class="nav-item me-3 dropdown">
							<a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="bi bi-list fs-4"></i>
								Categories</a>
							<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
								{% for category in categories %}
									<li>
										<a class="dropdown-item" href="#">{{ category.catName }}</a>
									</li>
								{% endfor %}
							</ul>
						</li>
						<li class="nav-item me-2">
							<a class="nav-link" href="{{ path("cart_index") }}">
								<i class="outline bi bi-bag fs-4"></i>
								Panier</a>
						</li>
						{% if app.user %}
							<li class="nav-item dropdown">
								<a class="nav-link" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="bi bi-person-lines-fill fs-4"></i>
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li>
										<a class="dropdown-item disabled text-dark" href="#">
											<b>{{ app.user.username }}</b>
										</a>
									</li>
									<li>
										<a class="dropdown-item" href="#">Mon perfil</a>
									</li>
									<li>
										<a class="dropdown-item" href="{{ path('app_logout') }}">
											DÃ©connection</a>
									</li>
								</ul>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path("app_login") }}">
									<i class="bi bi-person fs-4"></i>
									Connection</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</nav>
			<div class="container mb-3">
				<form class="nav-item">
					<div class="input-group">
						<input class="form-control shadow-none border-white" type="search" placeholder="Rechercher un jeu" aria-label="Search">
						<button class="btn btn-outline-light" type="submit">
							<i class="bi bi-search"></i>
						</button>
					</div>
				</form>
			</div>
			{# <div class="p-1 bg-light"></div> #}
		</div>
		{# <div class="p-5"></div> #}
		<div style="min-height: 141px;">


			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
		</div>

		{% block body %}{% endblock %}


		{# ======== FOOTER ======== #}

		<footer class="bgn text-secondary mt-5">

			<div class="container p-5">

				<ul class="list-inline ms-3">
					<li>Mentions legals</li>
					<li>Contact</li>
					<li>Etc...</li>
				</ul>


				<p>&copy; 2021 Ailtonito & Paupaul Games</p>

			</div>

		</footer>


		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		{% endblock %}

	</body>
</html>
