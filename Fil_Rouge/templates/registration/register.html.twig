{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong border border-4 border-warning" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
    <h3 class="mb-5">Inscription</h3>

    {{ form_start(registrationForm) }}

      <div class="form-outline mb-4">
        {{ form_row(registrationForm.email, {
            label: 'Nom d\'utilisateur/adresse mail'
        }) }}
      </div>
      <div class="form-outline mb-4">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
      </div>
      <div class="form-outline mb-4">
        {{ form_row(registrationForm.agreeTerms, {
            label: 'J\'accepte les conditions générales d\'utilisation'
        }) }}
      </div>
        <button class="btn btn-lg btn-primary" type="submit" class="btn">Valider</button>
        <hr class="my-4">
        <p class="text-center">Déjà inscrit?<p>
        <a class="btn btn-lg btn-warning" href="{{ path('app_login') }}">Connexion</a>
         </div>
        </div>
      </div>
    </div>
  </div>
    {{ form_end(registrationForm) }}
{% endblock %}
